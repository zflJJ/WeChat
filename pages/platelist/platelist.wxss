page{
  background-color: #f5f5f5;
}
.content{
  padding-bottom: 115rpx;
}
.plate-item {
  width: 750rpx;
  height: 102rpx;
  background-color: #fff;
  padding-left: 30rpx;
  padding-right: 30rpx;
  display: flex;
  align-items: center;
  border-top: 2rpx solid #e6e6e6;
  box-sizing: border-box;
}

.plate-num {
  height: 100rpx;
  font-size: 34rpx;
  color: #1a1a1a;
  line-height: 100rpx;
}

.del-num {
  margin-left: auto;
  background-color: #d01c95;
  width: 100rpx;
  height: 60rpx;
  text-align: center;
  color: #fff;
  font-size: 30rpx;
  line-height: 60rpx;
  border-radius: 30rpx;
}

.control-bottom {
  width: 750rpx;
  height: 112rpx;
  background-color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  text-align: center;
  line-height: 112rpx;
  font-size: 34rpx;
  position: fixed;
  left:0;
  bottom: 0;
}

.edit-btn {
  width: 375rpx;
  height: 112rpx;
  color: #d01c95;
}

.add-btn {
  width: 472rpx;
	height: 80rpx;
  text-align: center;
  line-height: 80rpx;
  color: #ffffff;
	background-image: linear-gradient(0deg, 
		#d01c95 0%, 
		#800d93 100%);
	box-shadow: 0px 6rpx 12rpx 0px 
		rgba(227, 0, 155, 0.6);
    border-radius: 40rpx;
}
.no-data{
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%,-60%);
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}
.no-data-img{
  width:210rpx;
  height:242rpx;
}
