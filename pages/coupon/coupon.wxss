/* pages/counp/counp.wxss */
page{background-color: #e6e6e6;}
.exchange-style{
  background-color: #fff;
  border-bottom: 1rpx solid #e6e6e6;
  border-top: 1px solid #e6e6e6;
  box-sizing: border-box;
  display:flex;
  align-items: center;
  padding-right: 29rpx;
  padding-left: 34rpx;
  justify-content: space-between
}
.input-class{
  height: 112rpx;
}
.code-btn{
  width: 136rpx;
	height: 51rpx;
	background-image: linear-gradient(0deg, #d01c95 0%, #800d93 100%);
	box-shadow: 0rpx 7rpx 18rpx 0rpx rgba(227, 0, 155, 0.6);
  font-size: 26rpx;
  color: #fff;
  text-align: center;
  line-height: 51rpx;
  border-radius: 20rpx;
}
.counp-content{
  padding: 26rpx 29rpx 0rpx 31rpx;
}
.counp-list{
  position: relative;
  height: 251rpx;   
  width: 100%;
  background-color: #fff;
  box-sizing: border-box;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
}
.img-top{
  position: absolute;
  top:0;
  left: 0;
  height:20rpx;
  width: 100%;
  border-radius: 16rpx;
}
.counp-info{
  padding: 53rpx 27rpx 32rpx 23rpx;
}
.counp-time{
  width: 100%;
  text-align: right;
}
.img-chosen{
  position: absolute;
  bottom: 0;
  right: 0;
  height: 58rpx;
  width: 58rpx;
}
.symbol-text{
  margin-top:20rpx;
  color:#d01c95;
  font-size: 32rpx;
}
 .price-text{
  color:#d01c95;
  font-size: 100rpx; 
  margin-left: 16rpx;
} 
.left-text{
  display: flex;
  align-items: flex-start;
}
.counp-time{
  font-size:24rpx;
  color: #999;
}
.no-usercounp{
  padding: 20rpx 27rpx  0rpx 32rpx ;
  text-align: right;
  font-size: 32rpx;
  color: #cf1c95;
}
.no-data{
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}
.no-data-img{
  width:210rpx;
  height:242rpx;
  padding-top:350rpx;
}